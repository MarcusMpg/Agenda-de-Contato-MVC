
@model List<ContatoModel>
@{
    ViewData["Title"] = "Agenda de Contatos";
}
<div class="text-center" >
    <div class="text-start">
        <a class="btn btn-primary" role="button" asp-controller="Contato" asp-action="Criar">adicionar novo contato</a>
    </div>
    <br/>
<h1 class="display-4">Agenda de Contotos</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nome</th>
            <th scope="col">Email</th>
            <th scope="col">Numero</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
            @if(Model != null && Model.Any())
            {
                foreach (ContatoModel contato in Model)
                {
                    <tr>
                        <th scope="row">@contato.Id</th>
                        <td>@contato.Nome</td>
                        <td>@contato.Email</td>
                        <td>@contato.Numero</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="ExcluirSpan">Excluir</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
</table>
</div>
